@{
    ViewBag.Title = "Home Page";
    Layout = null;
}


<html ng-app="app1">
<head>
    <title>
        Angular Application
    </title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/core/scripts/angular.min.js"></script>
</head>
<body ng-controller="MyFirstCtrl">
    <h1>Hello This is Angular Learning Phase 1</h1>
    @*<input type="text" ng-model="name" placeholder="Enter your name" />*@

    <div class="row">
        <div class="col-md-12">
            <form ng-submit="submit()" novalidate>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" ng-model="view.email">
                    <small id="emailHelp" class="form-text text-muted">Please provide the email address you used for creating your account</small>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" ng-model="view.password">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="button" class="btn btn-warning" ng-click="clear()">Clear</button>
            </form>
        </div>
    </div>

    <div class="panel panel-success" ng-if="isFormSubmitted">
        <div class="panel-body">

            <strong> Email: {{view.email}} </strong> <br />
            <strong> {{result}} </strong>

        </div>
    </div>

    <div class="panel panel-success" ng-cloak ng-init="LoadAllUser()">
        <div class="panel-body">

            <table class="table table-condensed table-responsive table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Username</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-if="users.length > 0" ng-repeat="user in users track by $index">
                        <td>{{user.ID}} </td>
                        <td>{{user.Username}} </td>
                        <td>{{user.FirstName}} </td>
                        <td>{{user.LastName}} </td>
                    </tr>
                    <tr ng-if="users.length == 0">
                        <td colspan="4">
                            No User Found
                        </td>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>


    @*<div class="panel panel-success" ng-show="isFormSubmitted">
        <div class="panel-body">

            <strong> Email: {{view.email}} </strong> <br />
            <strong> {{result}} </strong>

        </div>
    </div>*@






    <script src="~/core/app.js"></script>
</body>
</html>